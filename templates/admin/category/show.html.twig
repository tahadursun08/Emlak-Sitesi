{% extends 'adminbase.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa fa-bars"></i> Pages</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="/admin">Home</a></li>
                        <li><i class="fa fa-bars"></i>Category</li>
                        <li><i class="fa fa-square-o"></i>Show</li>
                    </ol>
                </div>
            </div>
            <!-- page start-->

            <h1>Category</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Parentid</th>
                    <td>{{ category.parentid }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ category.title }}</td>
                </tr>
                <tr>
                    <th>Keywords</th>
                    <td>{{ category.keywords }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ category.description }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ category.image }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ category.status }}</td>
                </tr>
                <tr>
                    <th>Updated_at</th>
                    <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Created_at</th>
                    <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                </tbody>
            </table>
            <div class="col-md-2">
                <a href="{{ path('admin_category_index') }}" class="btn btn-default ">Back to list</a>
            </div>
            <div class="col-md-2">
                <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-block btn-info">Edit</a>
            </div>
            <div class="col-md-2">
                {{ include('admin/category/_delete_form.html.twig') }}
            </div>

            <!-- page end-->
        </section>
    </section>
    <!--main content end-->
{% endblock %}

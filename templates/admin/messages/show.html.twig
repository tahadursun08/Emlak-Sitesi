{% extends 'adminbase.html.twig' %}

{% block title %}House{% endblock %}

{% block body %}
<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa fa-bars"></i>Message List Page</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="/admin">Home</a></li>
                    <li><i class="fa fa-bars"></i>Message</li>
                    <li><i class="fa fa-square-o"></i>Show</li>
                </ol>
            </div>
        </div>
        <!-- page start-->
        <h1>Message</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ message.name }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ message.subject }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ message.message }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ message.status }}</td>
            </tr>
            <tr>
                <th>Ip</th>
                <td>{{ message.ip }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ message.note }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ message.updatedAt ? message.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
        <div class="col-md-2">
            <a href="{{ path('admin_messages_index') }} " class="btn btn-default ">Back to list</a>
        </div>
        <div class="col-md-2">
            <a href="{{ path('admin_messages_edit', {'id': message.id}) }}" class="btn btn-block btn-info">Edit</a>
        </div>
        <div class="col-md-2">
            {{ include('admin/messages/_delete_form.html.twig') }}
        </div>
        <!-- page end-->
    </section>
</section>
    <!--main content end-->
{% endblock %}

{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }} Profile{% endblock %}

{% block body %}


    <div class="row">
        <div class="col-md-3">
            {% include('user/usermenu.html.twig') %}
        </div>
        <div class="col-md-9">
            <div class="aa-blog-content">
                <div class="row">
                    <div class="col-md-12">
                        <h1>My Comments</h1>
                        <table class="table">
                            <thead>
                            <tr>

                                <th>Subject</th>
                                <th>Comment</th>
                                <th>Status</th>
                                <th>House</th>
                                <th>Rate</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for comment in comments %}
                                <tr>

                                    <td>{{ comment.subject }}</td>
                                    <td>{{ comment.comment }}</td>
                                    <td>{{ comment.status }}</td>
                                    <td nowrap><a href="{{ path('house_show', {'id': comment.houseid}) }}">{{ comment.title }}</a></td>
                                    <td>{{ comment.rate }}</td>
                                    <td>
                                    </td>
                                    <td>
                                        {{ include('admin/comment/_delete_form.html.twig') }}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="10">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>




    </div>

    <!-- / Blog  -->






{% endblock %}

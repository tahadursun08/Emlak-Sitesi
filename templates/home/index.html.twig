    <!-- Latest property -->
    <section id="aa-latest-property">
        <div class="container">
            <div class="aa-latest-property-area">
                <div class="aa-title">
                    <h2>Recent properties for sale</h2>
                </div>
                <div class="aa-latest-properties-content">
                    <div class="row">
                        {% for rs in houses %}
                            <div class="col-md-4">
                                <article class="aa-properties-item">
                                    <a href="{{ path('house_show',{'id' :rs.id}) }}" class="aa-properties-item-img">
                                        <img src="{{ asset("uploads/images/" ~ rs.image) }} " style="width: 370px; height: 220px" alt="img">
                                    </a>
                                    <div class="aa-tag for-sale">
                                        For Sale
                                    </div>
                                    <div class="aa-properties-item-content">
                                        <div class="aa-properties-info">
                                            <span>{{rs.room}} Rooms</span>
                                            <span>{{rs.bed}} Beds</span>
                                            <span>{{rs.baths}} Baths</span>
                                            <span class="fa fa-map-marker">{{rs.city}}</span>
                                        </div>
                                        <div class="aa-properties-about">
                                            <h3><a href="#">{{rs.title}}</a></h3>
                                            <p>{{rs.description}}</p>
                                        </div>
                                        <div class="aa-properties-detial">
                                        <span class="aa-price">
                                            {{rs.price}}
                                        </span>
                                            <a href="{{ path('house_show',{'id' :rs.id}) }}" class="aa-secondary-btn">View Details</a>
                                        </div>
                                    </div>
                                </article>
                            </div>
                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- / Latest property -->

    <!-- Latest blog -->
    <section id="aa-latest-blog">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="aa-latest-blog-area">
                        <div class="aa-title">
                            <h2>Latest News</h2>
                        </div>
                        <div class="aa-latest-blog-content">
                            <div class="row">
                                <!-- start single blog -->
                                {% for rs in newhouses %}
                                <div class="col-md-4">
                                    <article class="aa-blog-single">
                                        <figure class="aa-blog-img">
                                            <a href="{{ path('house_show',{'id' :rs.id}) }}"><img src="{{ asset("uploads/images/" ~ rs.image) }} " style="width: 370px; height: 220px" alt="img"></a>
                                        </figure>
                                        <div class="aa-blog-single-content">
                                            <h3><a href="#">{{rs.title}}</a></h3>
                                            <p> {{rs.description}} </p>
                                            <div class="aa-blog-single-bottom">
                                                <a href="{{ path('house_show',{'id' :rs.id}) }}" class="aa-blog-author"><i class="fa fa-user"></i> {{rs.price}}</a>
                                            </div>
                                        </div>

                                    </article>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- / Latest blog -->

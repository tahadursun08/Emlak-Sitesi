{% extends 'homebase.html.twig' %}

{% block title %}{{ setting[0].title }}{% endblock %}
{% block keywords %}{{ setting[0].keywords }}{% endblock %}
{% block description %}{{ setting[0].description }}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12">

            <section id="aa-contact">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="aa-contact-area">
                                <div class="aa-contact-top">
                                    {% include('messages.html.twig') %}
                                    <div class="aa-contact-top-left">
                                        <iframe width="400" height="450" frameborder="0" allowfullscreen="" style="border:0" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3001.5093863691905!2d32.65331321479052!3d41.210668614895695!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x408354ac4492953f%3A0xab3b48ed0392a743!2sKarab%C3%BCk%20%C3%9Cniversitesi!5e0!3m2!1str!2str!4v1576794468063!5m2!1str!2str" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
                                    </div>
                                    <div class="aa-contact-top-right">
                                        <h2>Contact Information</h2>
                                        <p>{{ setting[0].contact |raw }}</p>
                                        <ul class="contact-info-list">
                                            <li> <i class="fa fa-phone"></i> {{ setting[0].phone |raw }} </li>
                                            <li> <i class="fa fa-envelope-o"></i>{{ setting[0].email |raw }} </li>
                                            <li> <i class="fa fa-map-marker"></i> {{ setting[0].address |raw }}</li>
                                            <li>
                                                <a href="{{ setting[0].instagram }}"><i class="fa fa-instagram"></i> </a>
                                                <a href="{{ setting[0].facebook }}"><i class="fa fa-facebook"></i> </a>
                                            </li>


                                        </ul>
                                    </div>
                                </div>

                                <div class="aa-contact-bottom">
                                    <div class="aa-title">
                                        <h2>Send Your Message</h2>
                                        <span></span>
                                        <p>Your email address will not be published. Required fields are marked <strong class="required">*</strong></p>
                                    </div>
                                    <div class="aa-contact-form">
                                        <form name="messages" class="contactform" method="post" role="form">
                                            <p class="comment-form-author">
                                                <label for="name">Name <span class="required">*</span></label>
                                                <input type="text" id="messages_name" name="messages[name]" value="" size="30" required="required">
                                            </p>
                                            <p class="comment-form-email">
                                                <label for="email">Email <span class="required">*</span></label>
                                                <input type="email" id="messages_email" name="messages[email]" value="" aria-required="true" required="required">
                                            </p>
                                            <p class="comment-form-url">
                                                <label for="subject">Subject</label>
                                                <input type="text" id="messages_subject" name="messages[subject]" maxlength="75">
                                            </p>
                                            <p class="comment-form-comment">
                                                <label for="comment">Message</label>
                                                <textarea id="messages_message" name="messages[message]" maxlength="255" cols="45" rows="8" aria-required="true" required="required"></textarea>
                                            </p>
                                            <p class="form-submit">
                                                <input type="hidden" name="token" value="{{ csrf_token('form-messeage') }}" />
                                                <input type="submit" name="submit" class="aa-browse-btn" value="Send Message">
                                            </p>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}